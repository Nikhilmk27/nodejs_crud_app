<%- include('./partials/header') %>

<link rel="stylesheet" href="navstyle.css"> 

<div class="containe">
  <div class="row">
    <div class="col-lg-12">
      <% if (message) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
          <!-- Display success message here -->
          <%= message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <div class="container mt-5">
        <h2>User List</h2>
        <% if (users != "") { %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <!-- Replace this part with data retrieved from the database -->
              <% users.forEach((user,index) => { %>
                <tr>
                  <td><%= index %></td>
                  <td><img src="<%= user.image %>" alt="User Image" width="50" class="img-thumbnail"></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td>
                    <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
                    <a href="/edit/<%= user._id %>" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                  </td>
                </tr>
              <% }) %>
              <!-- Add more rows for each user -->
            </tbody>
          </table>
        <% } else{%>
          <h1 class="text-center text-secondary mt-5">no data found in the db!</h1>
        <%} %>
      </div>
    </div>
  </div>
</div>


<%- include('./partials/footer') %>

   